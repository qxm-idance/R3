.section {
  padding-left: 0.625rem;
  padding-right: 0.625rem
}
.section--hero {
  background: #038cd6;
  background: #038cd6 url("../img/main_bg.png") 63% top;
  position: relative
}

.section--hero .subtitle {
  color: #c2e2f2;
  position: relative
}

.section--hero--slider {
  padding: 0
}

@media only screen and (max-width: 37.438em) {
  .section--hero {
    min-height:1.875rem;
    padding: 0.5rem 0.625rem 0;
    overflow: hidden;
    z-index: 5
  }

  .section--hero .hgroup {
    min-height: 2.625rem
  }

  .section--hero .subtitle {
    font-size: 0.813rem;
    line-height: .9375rem;
    line-height: 1.4
  }

  .section--hero [class*="title--"] {
    font-family: arial, sans-serif;
    font-size: 1rem;
    line-height: 1
  }

  .section--hero--account {
    padding: 0
  }

  .section--hero--account [class*="title--"] {
    position: absolute;
    top: 8px;
    left: 10px;
    z-index: 310;
    pointer-events: none;
    float: left
  }
}

@media only screen and (min-width: 37.5em) {
  .section--hero {
    min-height:4.688rem;
    padding-top: 1.5rem;
    padding-bottom: 0.375rem
  }

  .section--hero .hgroup {
    min-height: 4.375rem
  }

  .section--hero .subtitle {
    top: .25em
  }

  .section--hero .dropdown {
    margin-top: 0.375rem
  }
}

@media only screen and (min-width: 37.5em) {
  .section--small {
    min-height:3.125rem;
    padding-top: 15px;
    padding-bottom: 15px
  }

  .section--small h1 {
    line-height: 1;
    margin-bottom: 0
  }
}

/*section footer*/
.section-footer-scroll{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}
.section--footer {
  padding-top: 20px;
  padding-bottom: 15px;
  font-size: 11px;
  background: #004773;
  color: #a7c1d1;
}
.section--bottom a,.section--footer a {
  color: inherit
}
.section--bottom a:active,.section--bottom a:focus,.section--bottom a:hover,.section--footer a:active,.section--footer a:focus,.section--footer a:hover {
  color: #a7c1d1;
  text-decoration: none;
}
.section--footer__breadcrumb {
  color: #a7c1d1;
  padding-top: 35px;
  white-space: nowrap;
  line-height: 1;
}
.section--footer__breadcrumb ul {
  display: inline-block;
  margin: 0;
  width: auto;
}
.section--footer__breadcrumb li {
  display: inline;
  padding-right:8px;
}
.section--footer__breadcrumb li:nth-child(1n+2) a:before{
  font-family:framework-icons;
  content: "\E00B";
  font-size: 6px;
  color: #4d7f9d;
  vertical-align: middle;
  margin-right: 8px;
}
.footer__social {
  margin-top: 23px;
}
.footer__social a {
  margin-left: 2px;
  display: inline-block;
}
.section--footer__menu{
  padding-top:22px;
  border:solid #4d7f9d;
  border-width: 1px 0;
}
.footer-item {
  word-wrap: break-word;
  margin-left: 10px;
}
.footer-item:first-child{
  margin-left:0
}
.section--footer__menu h3 {
  color: #e8e8e8;
  margin-bottom: 15px;
}
.section--footer__menu ul {
  margin-bottom: 20px;
}
.section--footer__info {
  padding: 20px 0 5px;
}
.section--footer__info__icon {
  display: inline-block;
  font-size: 18px;
  line-height: 1;
  vertical-align: middle;
}
.section--footer__info__txt {
  padding: 0 10px;
  display: inline-block;
  vertical-align: middle;
}
.section--bottom {
  padding: 15px 0;
  font-size: 11px;
  background: #003758;
  color: #a7c1d1;
}
.adr-list li{
  display: inline-block;
  padding-right: 5px;
  vertical-align: middle;
  line-height: 30px;
}
.section--bottom__logo:before{
  font-size: 24px;
  line-height: 20px;
  float: left;
}
/*---section footer mobile---*/
@media only screen and (max-width: 768px){
  .offcanvas .section--oncanvas{
    position: static;
    padding-bottom: 0 !important;
  }
  .section-footer-scroll{
    position: relative;
    z-index: 1;
  }
  .section--bottom, .section--footer{
    text-align:center;
  }
  .section--footer__info {
    padding: 30px 0 5px;
  }
  .section--footer__info__icon{
    display: block;
    margin: 0 auto;

  }
  .section--footer__info__txt{
    line-height: 20px;
  }
  .mobile-text--center {
    text-align: center;
  }
  .section--bottom__holder .float--right{
    float: none;
  }
  .section--bottom__holder .float--left{
    float: none;
  }
  .footer__social {
    padding-top: 0;
    padding-bottom: 10px;
  }
}