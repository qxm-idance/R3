<div class="tooltip" data-module="tooltip" role="tooltip">
    <p>This is a tip</p>
</div>
<script>
    $('.table--zebra .col--expander').click(function () {
                if (!$(this).hasClass('is-expanded')) {
                    $(this).addClass('is-expanded');
                    $(this).parent().parent().parent().next().find('#mbb-bill-limit-details').removeClass().addClass('is-open')
                } else {
                    $(this).removeClass('is-expanded');
                    $(this).parent().parent().parent().next().find('#mbb-bill-limit-details').removeClass('is-open').addClass('is-collapsed')
                }
            }
    );
</script>