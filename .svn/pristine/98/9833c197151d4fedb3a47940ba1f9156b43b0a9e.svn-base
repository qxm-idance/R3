.menu{

  // ----------------------------------------------------------------
  // menu--main

  &--main{
    & a{
      font-size: 17px;
      line-height: 75px;
      padding: 0 12px;
      color: #fff;
      &:hover{
        text-decoration: none;
        &:after,
        &.active-trail:after{
          opacity: 1;
          transition: opacity .25s,-webkit-transform .25s;
          transition: opacity .25s,transform .25s;
          -webkit-transform: translateY(-25px);
          transform: translateY(-25px);
        }
      }
      &:after{
        content: '';
        height: 2px;
        margin: 0 auto;
        display: block;
        position: relative;
        background: #b8d5e5;
        opacity: 0;
        transition: opacity .25s,-webkit-transform .25s;
        transition: opacity .25s,transform .25s;
        -webkit-transform: translateY(-30px);
        transform: translateY(-30px);
      }
    }
    &>li:first-child a{
      padding-left: 0;
    }
  }

  /*&--user{
    &:before{
      content: '';
      height: 15px;
      width: 1px;
      display: inline-block;
      float: left;
      top: .55rem;
      position: relative;
      background: #4da6d8;
    }
  }*/

  /*&--right{
    z-index: 200;
    position: relative;
    top: 25px;
    &>*{
      margin-left: 16px;
      float: right;
      &>a{
        font-size: 20px;
        color: #fff;
      }
    }
  }*/

  // ----------------------------------------------------------------
  // menu--subnav

  &--subnav{
    height: 50px;
    overflow: hidden;
    & a{
      line-height: 50px;
      padding-right: 10px;
      color: #b8d5e5;
      &.active-trail,
      &:focus,
      &:hover{
        color: #fff;
        text-decoration: none;
      }
    }
    & li{
      margin-right: 20px;
    }

    // menu--subnav .flexnav
    & .flexnav{
      float: left;
      position: relative;
      height: inherit;
      padding:0 20px;
      background: inherit;
      background-color: #005c96;
      background-image: linear-gradient(180deg,#005c96,#005285);
      border: 1px solid #005285;
      border-width: 0 1px;

      //.flexnav__toggler
      &__toggler {
        background: 0 0;
        position: relative;
        cursor: pointer;
        padding-right: 20px;
        &:after{
          @extend %icon-base-styles;
          @include icon-arrow-down;
          color:inherit;
          line-height: 1;
          position: absolute;
          top: 20px;
          right: 15px;
          font-size: 10px;
        }
      }

      //.flexnav__subnav
      &__subnav{
        display: none;
        min-width: 200px;
        box-shadow: 0 5px 10px 0 rgba(0,0,0,.23);
        transition: all .3s ease-out .1s;
        position: absolute;
        @include zindex(ui-top);
        right: -1px;
        top: 100%;
        background: #005c96;
        border: 1px solid #004773;
        & a{
          display: block;
        }
        & li{
          float: none;
          border-top: 1px solid #d1d1d1
        }
      }

      //.flexnav.is-open
      &.is-open {
        & a{
          max-width: 100%;
          text-overflow: ellipsis;
          overflow: hidden;
          white-space: nowrap;
          word-wrap: normal
        }
        & .flexnav__subnav{
          display: block;
        }
        & .flexnav__toggler{
          &:after{
            @include icon-arrow-up;
          }
        }

      }

      //.flexnav li
      & li{
        border-top: 1px solid #004773;
        &:first-child{
          border-top: none;
        }
      }
    }
  }


  // ----------------------------------------------------------------
  // menu--flexnav

  &--flexnav{
    & .flexnav {
      padding-right: 20px;
      &__toggler {
        &:after {
          right: 0;
        }
      }
      & li {
        margin: 0;
        background-color: inherit;
        color: inherit;
        & a {
          padding: 3px 20px;
        }
      }
    }
    &.flexnav--active{
      overflow: visible;
    }
  }
}


