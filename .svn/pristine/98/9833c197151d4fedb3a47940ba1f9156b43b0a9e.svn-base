.menu-wrapper {
  background: #038cd6;
}
.menu-subnav-sticky-wrapper {
  height: 50px;
}
.side-panel {
  background: #038cd6;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  position: fixed;
  right: -270px;
  top: 0;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  width: 270px;
  @include zindex(overlay, 1);
  transition: transform .3s ease-out
}



