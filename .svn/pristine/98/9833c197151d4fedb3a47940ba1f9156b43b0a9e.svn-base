  // nav-mobile__accordion
  &__accordion{
    & li{
      position: relative;
      color: #fff;
      line-height: 55px;
      & a{
        color: #fff;
        display: block;
        height: 100%;
        position: relative;
        z-index: 1;
        padding: 0 15px;
      }
      & span{
        height: 55px;
        border-left: 1px solid rgba(255,255,255,.2);
        font-size: 14px;
        width: 55px;
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        cursor: pointer;
        opacity: .6;
        z-index: 2;
        &:before {
          margin: auto;
        }
        &.is-expanded{
          &:before{
            transform: rotate(90deg);
          }
        }
      }
      &.is-active &__drop{
        max-height: 100em;
      }
    }
    &>li{
      &>a{
        border-bottom: 1px solid rgba(255,255,255,.2);
        font-size: 1.2em;
      }
    }
    // nav-mobile__accordion__drop
    &__drop{
      background-color: #0278b8;
      border-bottom: 1px solid rgba(255,255,255,.2);
      overflow: hidden;
      transition: max-height .3s ease-out;
      & li{
        line-height: 45px;
        &:first-child {
          padding-top: 5px;
        }
        &:last-child {
          padding-bottom: 5px
        }
      }
      & a{
        &:hover{
          opacity: .5;
        }
      }
    }
  }
}


//-------------------------------------------------
// offcanvas

.offcanvas--open {
  overflow-y: hidden
}

.offcanvas--open #footer,
.offcanvas--open #main,
.offcanvas--open .nav-mobile__container,
.offcanvas--open .section--menu,
.offcanvas--open .side-panel {
  -webkit-transform: translateX(-270px);
  transform: translateX(-270px);
}
.offcanvas .section--oncanvas:after {
  content: "";
  background-color: rgba(0,0,0,.35);
  opacity: 0;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  transition: opacity .5s;
  visibility: hidden;
  @include zindex(overlay);
}

.offcanvas .section--oncanvas.is-disabled:after {
  position: fixed;
  top: 0;
  right: 270px;
  left: 0;
  opacity: 1;
  -moz-user-select: none;
  user-select: none;
  visibility: visible
}

