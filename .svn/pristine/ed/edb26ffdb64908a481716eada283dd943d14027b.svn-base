/**
  name: block
  type: ui
  modifiers:
    --filter
    --small
    --content
    ---low
    --col
    --list
  elements:
    __header
    __header-rider
    __content
*/



.block{

  //------------------------------------------------
  //block--filter

  &--filter{
    padding: 1.25rem 0.625rem;
    padding-top: 0;

    @include  until($bp-medium){
      padding:1.25rem
    }
  }


  //------------------------------------------------
  //block--small

  &--small{
    padding: 0.625rem;
  }


  //------------------------------------------------
  //block--content

  &--content{
    padding: 1.25rem 0.625rem;

    @include  at-least($bp-medium){
      padding: 1.875rem 1.25rem
    }

    &--dark{
      padding: 1.25rem 0.625rem;
      margin: -0.063rem 0 0.625rem;
      margin-top: -1px;

      @include  at-least($bp-medium){
        padding: 1.875rem 1.25rem;
        margin: -0.063rem 0 1.25rem
      }

      &> *:first-child{
        margin-top: 0
      }
    }

    &--low{
      padding: 0.625rem 1.25rem
    }

    &> *:first-child{
      margin-top: 0
    }
  }


  //------------------------------------------------
  //block--col

  &--col{
    padding: 1.875rem 0;

    &>*:first-child{
      margin-top: 0
    }

    &--dark{
      margin: -0.063rem 0 0.625rem;
      margin-top: -1px;

      @include  at-least($bp-medium){
        margin: -0.063rem 0 1.25rem
      }
    }
  }

  //------------------------------------------------
  //block--list

  &--list{
    padding-left: 0;
    padding-right: 0;
  }

  //------------------------------------------------
  //block__header

  &__header{
    padding-bottom: 0.625rem;
    border-bottom: 1px solid #b8b8b8;
    position: relative;

    &--no-border-bottom{
      border-bottom: 0;
    }

    & [class*="title--"]{
      margin-bottom: 0
    }

    &__link{

      @include  at-least($bp-medium){
        position:absolute;
        right: 0;
        bottom: .625rem;
        text-align: right
      }

      & a{
        color: #666;
        &:hover{
          color: #666;
        }
      }
    }

    .block--list--thumbs &{
      border-bottom: 0
    }
  }

  //------------------------------------------------
  //block__header-rider

  &__header-rider{
    /*margin-bottom: 2.5px;*/
    color: #666;

    &--small{
      font-size: 0.813rem;
      line-height: 18px;
    }
  }


  //------------------------------------------------
  //block__content

  &__content{
    padding: 1.563rem 0 3.125rem
  }


  //------------------------------------------------
  //block .align--middle label /block .align--middle span
  & .align--middle label,
  & .align--middle span{
    display: inline-block;
    vertical-align: middle
  }

  & .align--middle span{
    height: 30px
  }

}