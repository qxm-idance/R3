<div class="section--block">
  <iframe id="mainframe" name="mainframe" src="/examples/amcharts-demo/index.html" width="100%" scrolling="no"
      frameborder="0" onload="setFrameHeight()">
  </iframe>
</div>

<script type="text/javascript">
  function setFrameHeight() {
    var ifm = document.getElementById("mainframe");
    var h =mainframe.document.body.scrollHeight;
    debugger;
    if (ifm.src.indexOf('amcharts') > 0) {
      h+=500;
    } else if (ifm.src.indexOf('scroll-to') > 0) {
      h= 500;
    }
    ifm.height = h;
  }
  $(document).ready(function () {
    $('.doc-side-list ul').on('click', 'li a', hrefAnimate);
  });
  function hrefAnimate (e) {
    e.preventDefault()
    $(this).parent("li").addClass('current').siblings("li").removeClass('current');
    var anchor = $(this).attr('href');
    $("#mainframe").attr({"src": anchor});
  }
</script>
